# Copy this file to `.env` and fill in your secrets

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_API_KEY=your-gemini-api-key

# Security Tools
NVD_API_KEY=your-nvd-api-key-optional

# BigQuery Configuration
BIGQUERY_DATASET=security_analytics

# Application Settings
LOG_LEVEL=INFO
LOG_FORMAT=rich
REPORT_DIR=reports
FLASK_ENV=development

# Optional: Rate Limiting (Redis URL)
# RATELIMIT_STORAGE_URL=redis://localhost:6379

# Optional: Gemini Settings
GEMINI_MAX_FILES=20
# Set to "all" to analyze all files (may hit token limits)
# GEMINI_MAX_FILES=all

# Option 2: Google Cloud Service Account (more secure, for production)
GOOGLE_APPLICATION_CREDENTIALS=

# Other settings
LOG_LEVEL=INFO

# Structured JSON logs ("json" or "rich")
LOG_FORMAT=rich

# Rate-limiter backend, e.g. redis://user:pass@host:6379/0
RATELIMIT_STORAGE_URL=

# Optional directory where reports are written (default: ./reports)
REPORT_DIR=reports 