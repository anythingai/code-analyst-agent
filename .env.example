# Copy this file to `.env` and fill in your secrets

# Option 1: Google AI Studio API Key (simpler, for local use)
GOOGLE_API_KEY=

# Option 2: Google Cloud Service Account (more secure, for production)
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

# Other settings
NVD_API_KEY=
LOG_LEVEL=INFO

# Structured JSON logs ("json" or "rich")
LOG_FORMAT=rich

# Rate-limiter backend, e.g. redis://user:pass@host:6379/0
RATELIMIT_STORAGE_URL=

# Optional directory where reports are written (default: ./reports)
REPORT_DIR=reports 